<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous"> <!-- Bootstrap -->
        <link rel="stylesheet" href="../public/css/contact.css"> <!-- Custom CSS -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> <!-- Font -->
        <link rel="icon" href="../public/assets/icons/favicon.ico"> <!-- favicon -->
        <link rel="stylesheet" href="../public/assets/fontawesome/css/all.css"> <!-- fontawesome -->
        <title>Contact</title>
    </head>

    <body>

<!-- NAVBAR -->

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="ms-5 me-5" src="../public/assets/icons/logo.png" alt="DumbWays"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-5" href="/home" style="font-weight: 800;">Home</a>
                    </li>
                    {{#if login}}
                    <li class="nav-item">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                {{#if login}}
                    <p class="me-4 m-0">Halo {{user.name}}</p>
                    <a class="nav-link me-4" href="/logout">Logout</a>
                {{else}}
                <a class="nav-link me-4" href="/register">Register</a>
                <a class="nav-link me-4" href="/login">Login</a>
                {{/if}}
                <a class="btn btn-dark me-5 py-2 px-4" href="/contact">Contact Me</a>
            </div>
        </div>
    </nav>

<!-- /NAVBAR/ -->


<!-- CONTACT FORM -->

    <div class="container-fluid">
        <div>
            <h2 class="fw-bold">GET IN TOUCH</h2>
        </div>
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Input name here...">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Input email here...">
            </div>
            <div class="mb-3">
                <label for="number" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="number" placeholder="Input phone number here...">
            </div>
            <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <select class="form-select" id="subject">
                    <option selected>Open this select menu</option>
                    <option value="Collaboration">Collaboration</option>
                    <option value="Observation">Observation</option>
                    <option value="Hang Out">Hang Out</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" placeholder="Input message here..." id="message" style="height: 100px"></textarea>
            </div>
            <div class="buttons my-5 d-flex justify-content-end">
                <button class="btn btn-dark" type="button" onclick="getData()">Submit</button>
            </div>
        </form>
    </div>

<!-- /CONTACT FORM/ -->

<!-- SCRIPT -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<script src="../public/js/contact.js"></script>
<!-- /SCRIPT/-->
    </body>
</html>
        <title>Register</title>
    </head>

    <body>

<!-- NAVBAR -->

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="ms-5 me-5" src="../public/assets/icons/logo.png" alt="DumbWays"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-5" href="/home" style="font-weight: 800;">Home</a>
                    </li>
                    {{#if login}}
                    <li class="nav-item">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <a class="nav-link me-4" href="/register">Register</a>
                <a class="nav-link me-4" href="/login">Login</a>
                <a class="btn btn-dark me-5 py-2 px-4" href="/contact">Contact Me</a>
            </div>
        </div>
    </nav>

<!-- /NAVBAR/ -->


<!-- CONTACT FORM -->

    <div class="container-fluid">
        <div class="container2">
            <div>
                <h2 class="fw-bold">REGISTER</h2>
            </div>
            <form action="/register" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Input name here...">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Input email here...">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Input password here...">
                </div>
                <div class="buttons my-5 d-flex justify-content-end">
                    <button class="btn btn-dark" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

<!-- /CONTACT FORM/ -->

<!-- SCRIPT -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="../public/css/project.css"> <!-- Custom CSS -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> <!-- Font -->
        <link rel="icon" href="../public/assets/icons/favicon.ico"> <!-- favicon -->
        <link rel="stylesheet" href="../public/assets/fontawesome/css/all.css"> <!-- fontawesome -->
        <title>Add Project</title>
    </head>
    <body>

<!-- NAVBAR -->

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="ms-5 me-5" src="../public/assets/icons/logo.png" alt="DumbWays"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-5" href="/home">Home</a>
                    </li>
                    {{#if login}}
                    <li class="nav-item">
                        <a class="nav-link" href="/project" style="font-weight: bold">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                {{#if login}}
                    <p class="me-4 m-0">Halo {{user.name}}</p>
                    <a class="nav-link me-4" href="/logout">Logout</a>
                {{else}}
                <a class="nav-link me-4" href="/register">Register</a>
                <a class="nav-link me-4" href="/login">Login</a>
                {{/if}}
                <a class="btn btn-dark me-5 py-2 px-4" href="/contact">Contact Me</a>
            </div>
        </div>
    </nav>

<!-- /NAVBAR/ -->

<!-- PROJECT -->

    <div class="container-fluid">
        <div class="header">
            <h2>ADD MY PROJECT</h2>
        </div>
        <form action="/project" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="projectName" class="form-label">Project Name</label>
                <input type="text" class="form-control" name="title" id="projectName" placeholder="Input project name here...">
            </div>

            <div class="dateContainer mb-3 d-flex">
                <div class="startDate me-2">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="date form-control" name="startDate" id="startDate">
                </div>

                <div class="startDate">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="date form-control" name="endDate" id="endtDate">
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="description" placeholder="Input description here..." id="description" style="height: 100px"></textarea>
            </div>

            <div class="mb-3">
                <p class="m-0">Technologies</p>
                <div class="d-flex">
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" name="python"  type="checkbox" value="Python" id="python">
                            <label class="check form-check-label" for="python">
                            Python
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="javascript" type="checkbox" value="javascript" id="javascript">
                            <label class="check form-check-label" for="javascript">
                            JavaScript
                            </label>
                        </div>
                    </div>
                    <div class="right-check mb-2">
                        <div class="form-check">
                            <input class="form-check-input" name="swift" type="checkbox" value="swift" id="swift">
                            <label class="check form-check-label" for="swift">
                            Swift
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="nodejs" type="checkbox" value="nodejs" id="nodejs">
                            <label class="check form-check-label" for="nodejs">
                            NodeJs
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input class="form-control" name="image" type="file" id="image">
                </div>
            </div>
            
            <div class="buttons my-5 d-flex justify-content-end">
                <button class="btn btn-dark" type="submit">Submit</button>
            </div>
        </form>
    </div>

<!-- /PROJECT/ -->

<!-- SCRIPT -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<!-- SCRIPT -->
    </body>
</html>
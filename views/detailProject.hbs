    </head>

    <body>

<!-- NAVBAR -->

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="ms-5 me-5" src="../public/assets/icons/logo.png" alt="DumbWays"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-5" href="/home" style="font-weight: 800;">Home</a>
                    </li>
                    {{#if login}}
                    <li class="nav-item">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                {{#if login}}
                    <p class="me-4 m-0">Halo {{user.name}}</p>
                    <a class="nav-link me-4" href="/logout">Logout</a>
                {{else}}
                <a class="nav-link me-4" href="/register">Register</a>
                <a class="nav-link me-4" href="/login">Login</a>
                {{/if}}
                <a class="btn btn-dark me-5 py-2 px-4" href="/contact">Contact Me</a>
            </div>
        </div>
    </nav>

<!-- /NAVBAR/ -->


<!-- DETAIL PROJECT -->

    <div class="detailContainer d-flex justify-content-center">
        <div class="detailCard mt-5 p-5 ">
            <h2>{{project.name}}</h2>
            <hr>
            <div class="d-flex">
                            <div class="left">
                <div class="img-container">
                    <img src="../public/assets/database.PNG" alt="database">
                </div>
                <div class="icons">
                    <div>
                        <h4>Duration</h4>
                        <div class="d-flex mb-3">
                            <img class="me-3" src="../public/assets/icons/calendar.png" alt="calendar">
                            <p class="m-0 d-flex align-items-center">
                                {{project.startDate}} - {{project.endDate}}
                            </p>
                        </div>
                        <div class="d-flex">
                            <img class="me-3" src="../public/assets/icons/wall-clock.png" alt="calendar">
                            <p class="m-0 d-flex align-items-center">
                                {{project.duration}}
                            </p>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h4>Technologies</h4>
                        <div class="d-flex">
                            <div class="me-4">
                                {{#if project.python}}
                                <div class="d-flex mb-3">
                                    <i class="fa-brands fa-python fa-2x me-3"></i>
                                    <p class="m-0 d-flex align-items-center">
                                        Python
                                    </p>
                                </div>
                                {{/if}}
                                {{#if project.javascript}}
                                <div class="d-flex mb-3">
                                    <i class="fa-brands fa-js fa-2x me-3"></i>
                                    <p class="m-0 d-flex align-items-center">
                                        JavaScript
                                    </p>
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <div>
                                    {{#if project.swift}}
                                    <div class="d-flex mb-3">
                                        <i class="fa-brands fa-swift fa-2x me-3"></i>
                                        <p class="m-0 d-flex align-items-center">
                                            Swift
                                        </p>
                                    </div>
                                    {{/if}}
                                    {{#if project.nodejs}}
                                    <div class="d-flex">
                                        <i class="fa-brands fa-node-js fa-2x me-3"></i>
                                        <p class="m-0 d-flex align-items-center">
                                            NodeJs
                                        </p>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right">
                <div class="desc-container">
                    <h3>Description</h3>
                    <p>
                        {{project.description}}
                    </p>
                </div>
            </div>
            </div>
        </div>
    </div>

<!-- /DETAIL PROJECT/ -->

